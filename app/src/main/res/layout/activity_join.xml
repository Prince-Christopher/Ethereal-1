<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:text="Join us."
            android:fontFamily="@font/brandonreg"
            android:textColor="@color/grey"
            android:textSize="40dp" />

        <EditText
            android:id="@+id/namenickname"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey"
            android:layout_width="match_parent"
            android:fontFamily="@font/brandonreg"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/roundedrectangle"
            android:hint="Name/nickname"
            android:padding="20dp"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/email"
            android:textColor="@color/grey"
            android:fontFamily="@font/brandonreg"
            android:textColorHint="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/roundedrectangle"
            android:hint="Email ID"
            android:padding="20dp"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/password"
            android:fontFamily="@font/brandonreg"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/roundedrectangle"
            android:hint="Password (min 8 characters)"
            android:padding="20dp"
            android:textSize="15dp" />

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/roundedcircle"
            android:padding="10dp"
            android:text="CONTINUE"
            android:textSize="15dp"
            app:backgroundTint="@color/lavender" />

        <TextView
            android:id="@+id/already"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/brandonreg"
            android:textColor="@color/grey"
            android:layout_marginTop="20dp"
            android:text="Already have an account? Sign in." />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/termsandpolicy"
                android:fontFamily="@font/brandonreg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:text="By signing up, you agree to Ethereal's Terms &amp; Conditions\nand Privacy Policy. "
                android:textColor="@color/grey"
                android:textSize="13dp"
                tools:ignore="HardcodedText" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>