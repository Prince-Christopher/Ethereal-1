<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ethereal">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ethereal"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Activities.ViewGoalsActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.NotificationMessage"
            android:exported="false" />
        <activity
            android:name=".Activities.AddRemainderActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.EditActivity"
            android:exported="false"
            android:launchMode="singleTop" />
        <activity
            android:name=".Activities.CheckActivity"
            android:exported="true"
            android:launchMode="singleTop" />
        <activity
            android:name=".Activities.BreatheActivity"
            android:exported="true"
            android:launchMode="singleTop" />
        <activity
            android:name="OnBoarding.OnBoardingActivity"
            android:exported="true"
            android:launchMode="singleTop" />
        <activity
            android:name=".Activities.SplashActivity"
            android:exported="true"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ForgotActivity"
            android:exported="true"
            android:launchMode="singleTop" />
        <activity
            android:name=".Activities.NancyActivity"
            android:exported="true"
            android:launchMode="singleTop" />
        <activity
            android:name=".Activities.MainActivity"
            android:exported="true"
            android:launchMode="singleTop" />
        <activity
            android:name=".Activities.SigninActivity"
            android:exported="true"
            android:launchMode="singleTop" />
        <activity
            android:name=".Activities.StartActivity"
            android:exported="true"
            android:launchMode="singleTop" />
        <activity
            android:name=".Activities.JoinActivity"
            android:exported="true"
            android:launchMode="singleTop" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <receiver
            android:name=".AlarmDatabase.BootUpReciever"
            android:enabled="true" />
        <receiver android:name=".HelperClasses.AlarmBroadcast" />
    </application>

</manifest>